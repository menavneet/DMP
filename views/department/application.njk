{% extends "../layout.njk" %}
{% block body %}
<div class="application-detail">
<h1>Application ID {{application._id}}</h1>
<label>Name :{{application.name}}</label>
<label>Description :{{application.description}}</label>
<label>Created At : {{application.created_at}}</label>
<label>Created By :{{application.created_by}}</label>
<label>DeadLine :{{application.late_date_to_response}}</label>
<label>Current Status : {{application.current}}</label>    
</div>
<label>Follow Up Detail :
</label>
{% for item in application.follow_up_detail %}
   <div class="follow-up-tile">{{item}}</div>
{% endfor %}
<div>
<form method="post" action="/department/addFollowUpDetail">
<label>Follow up Details :</label>
    <textarea name="follow_up_detail" placeholder="Update Follow Up Details of Application"></textarea>
    <input type="hidden" name="application_id" value={{application._id}}>
    <input type="submit" value="Add follow up detail">
</form>
</div>
{% endblock %}